<div class='container'>
  <p style="color: green"><%= notice %></p>

  <h1>Restaurants</h1>

    <div id="restaurants">
      <% @restaurants.each do |restaurant| %>
        <div class="card" style="width: 18rem;">
        <%= render restaurant %>
        <p>
          <%= link_to "Show this restaurant", restaurant %>
        </p>
      <% end %>
      </div>
    </div>

  <%= link_to "New restaurant", new_restaurant_path %>
</div>