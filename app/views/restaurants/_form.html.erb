<div class='container'>
  <%= form_with(model: restaurant) do |form| %>
    <% if restaurant.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(restaurant.errors.count, "error") %> prohibited this restaurant from being saved:</h2>

        <ul>
          <% restaurant.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class='card' style='width: 25rem;'>
        <div class='card-body'>
            <div class='mb-3'>
              <%= form.label :name, { class: "form-label"} %>
              <%= form.text_field :name, { class: "form-control", placeholder: "Name" } %>
            </div>

            <div class='mb-3'>
              <%= form.label :address, { class: "form-label"} %>
              <%= form.text_field :address, { class: "form-control", placeholder: "Address" } %>
            </div>

            <form>
              <input type="submit" value="Submit changes" class='btn btn-primary'>
            </form>
          </div>
        </div>  
  <% end %>
</div>
