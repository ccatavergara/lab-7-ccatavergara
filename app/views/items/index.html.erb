<div class='container text-center'>
  <p style="color: green"><%= notice %></p>

  <h1>Items</h1>

  <div id="items">
    <% @items.each do |item| %>
      <%= render item %>
      <p>
        <%= link_to "Show this item", item, class: 'btn btn-outline-info btn-sm'%>
      </p>
    <% end %>
  </div>

  <%= link_to "New item", new_item_path, class: 'btn btn-outline-dark btn-sm' %>
</div>