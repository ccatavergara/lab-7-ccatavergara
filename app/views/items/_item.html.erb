
<div class="card" style='width:25rem; margin:auto;'>
<div id="<%= dom_id item %>">
  <div class="card-header text-center" style='background-color:#adb5bd;'>
    <h3>
      <%= item.name %>
    </h3>
  </div>
  <div class="card-body">
  <p class=''>
    <strong>Price:</strong>
    $<%= item.price%>
    <br>
    <strong>Callories:</strong>
    <%= item.callories %>
  </p>
  </div>
</div>
</div>
